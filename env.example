# Cricket Fitness Tracker Environment Configuration
# Copy this file to .env and update the values

# Application Settings
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO
TESTING=false

# Server Configuration
HOST=0.0.0.0
PORT=8010
RELOAD=true

# Database Configuration (PostgreSQL)
DB_HOST=localhost
DB_PORT=9432
DB_NAME=cricket_fitness
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_DRIVER=postgresql+asyncpg
DB_ECHO=false
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# OpenAI Configuration (Required for voice processing)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_WHISPER_MODEL=whisper-1
OPENAI_GPT_MODEL=gpt-4o-2024-08-06
OPENAI_MAX_TOKENS=500
OPENAI_TEMPERATURE=0.1
OPENAI_TIMEOUT=30

# Audio Processing Configuration
AUDIO_STORAGE_PATH=audio_storage
AUDIO_MAX_FILE_SIZE_MB=10
AUDIO_SUPPORTED_FORMATS=["wav", "mp3", "webm", "m4a"]
AUDIO_DEFAULT_SAMPLE_RATE=16000
AUDIO_MIN_SAMPLE_RATE=8000
AUDIO_MAX_SAMPLE_RATE=48000
AUDIO_MAX_DURATION_SECONDS=300

# WebSocket Configuration
WS_MAX_CONNECTIONS=100
WS_PING_INTERVAL=20
WS_PING_TIMEOUT=20
WS_CLOSE_TIMEOUT=10
WS_MAX_MESSAGE_SIZE=10485760

# Validation Configuration
VALIDATION_MAX_FITNESS_DURATION_MINUTES=600
VALIDATION_MIN_FITNESS_DURATION_MINUTES=1
VALIDATION_MAX_DISTANCE_KM=100.0
VALIDATION_MIN_DISTANCE_KM=0.1
VALIDATION_MAX_COACHING_DURATION_MINUTES=480
VALIDATION_MIN_COACHING_DURATION_MINUTES=15
VALIDATION_MAX_FOCUS_AREAS=10
VALIDATION_MAX_RUNS=1000
VALIDATION_MAX_BALLS=600
VALIDATION_MAX_WICKETS=10
VALIDATION_MIN_SLEEP_HOURS=4
VALIDATION_MAX_SLEEP_HOURS=16
VALIDATION_MAX_TEXT_LENGTH=2000
VALIDATION_MIN_TEXT_LENGTH=1

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8020", "http://localhost:8010"]

# Langfuse (Optional - for monitoring)
LANGFUSE_SECRET_KEY=your_langfuse_secret_key
LANGFUSE_PUBLIC_KEY=your_langfuse_public_key
LANGFUSE_HOST=https://cloud.langfuse.com 